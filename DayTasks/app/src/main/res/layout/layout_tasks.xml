<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="End day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:id="@+id/button_end_day" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
            android:onClick="endDay (MainActivity)"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_day_start"
            android:text="Day started at --:--"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Things to be done:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_below="@+id/text_day_start" android:layout_alignEnd="@+id/checkBox4"/>
    <CheckBox
            android:text="Morning Sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" android:layout_below="@+id/textView2" android:layout_alignParentStart="true"/>
    <CheckBox
            android:text="Sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:layout_below="@+id/checkBox" android:layout_alignParentStart="true"/>
    <CheckBox
            android:text="Stepper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            android:layout_below="@+id/checkBox2" android:layout_alignParentStart="true"/>
    <CheckBox
            android:text="Went for walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            android:layout_below="@+id/checkBox3" android:layout_alignParentStart="true"/>
    <CheckBox
            android:text="Read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            android:layout_below="@+id/checkBox4" android:layout_alignParentStart="true"/>
</RelativeLayout>